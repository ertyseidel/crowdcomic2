<table class="comic-post comic-post--new">
	<tr>
		<td class="comic-post-cell comic-post-cell--username comic-post-cell--username--new">
			{{username}}:
		</td>
		<td class="comic-post-cell comic-post-cell--text comic-post-cell--text--new">
			<textarea class="input comic-post-cell--text--new__input" placeholder="{{placeholder}}"></textarea>
		</td>
	</tr>
	<tr>
		<td class="comic-post-cell comic-post-cell--submit" colspan="2">
			<button class="comic-post-cell--submit__button button">{{action}}</button>
		</td>
	</tr>
</table>
